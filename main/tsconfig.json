{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "esModuleInterop": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "outDir": "build",
    "skipLibCheck" : true,
    "plugins": [{ "name": "@kitajs/ts-html-plugin" }],
    "jsx": "react",
    "jsxFactory": "Html.createElement",
    "jsxFragmentFactory": "Html.Fragment"
  },
  "exclude": [
    "node_modules"
  ]
}
